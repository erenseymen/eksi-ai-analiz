{
    "manifest_version": 3,
    "name": "Ekşi Sözlük AI Analiz",
    "version": "1.0",
    "description": "Ekşi Sözlük başlıklarını analiz eden, özetleyen ve blog yazısı hazırlayan yapay zeka asistanı.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://eksisozluk.com/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
        "default_popup": "src/model-select.html"
    },
    "options_page": "src/options.html",
    "content_scripts": [
        {
            "matches": [
                "https://eksisozluk.com/*"
            ],
            "js": [
                "src/content.js"
            ],
            "css": [
                "src/styles.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "src/options.html"
            ],
            "matches": [
                "https://eksisozluk.com/*"
            ]
        }
    ]
}