{
    "manifest_version": 3,
    "name": "Ekşi Sözlük AI Analiz",
    "version": "1.9",
    "description": "Ekşi Sözlük başlıklarını analiz eden, özetleyen ve blog yazısı hazırlayan yapay zeka asistanı",
    "author": "Eren Seymen",
    "homepage_url": "https://github.com/erenseymen/eksi-ai-analiz",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://eksisozluk.com/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
        "default_popup": "src/model-select.html"
    },
    "options_page": "src/options.html",
    "content_scripts": [
        {
            "matches": [
                "https://eksisozluk.com/*"
            ],
            "js": [
                "src/prompts.js",
                "src/constants.js",
                "src/utils.js",
                "src/analysis-history.js",
                "src/settings.js",
                "src/page-detector.js",
                "src/scraper.js",
                "src/api.js",
                "src/markdown.js",
                "src/ui.js",
                "src/content.js"
            ],
            "css": [
                "src/styles.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "src/options.html",
                "src/history.html"
            ],
            "matches": [
                "https://eksisozluk.com/*"
            ]
        }
    ]
}